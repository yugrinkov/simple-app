<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div id="header" class="navbar-header custom-header">
            <i id="back" class="glyphicon glyphicon-arrow-left"></i>
            <span class="title"> {{ title }} </span>
        </div>
    </div>
</nav>
<div id="content">
    <div id="message"></div>

    <form role="form">
        <div class="form-group">
            <label for="nameInput">Name:</label>
            <input type="text" class="form-control" id="nameInput" value="{{ name }}" placeholder="Enter name" disabled/>
        </div>
        <div class="form-group">
            <label for="usernameInput">Username:</label>
            <input type="text" class="form-control" id="usernameInput" value="{{ username }}" placeholder="Username" disabled/>
        </div>
        <div class="form-group" data-validation="email">
            <label for="emailInput">Email:</label>
            <input type="email" class="form-control" id="emailInput" value="{{ email }}" placeholder="Email" />
        </div>
        <div class="row form-group">
            <div class="col-md-8">
                <div id="fullAddressContainer"></div>
            </div>
            <div class="col-md-4">
                <div id="map" class="map"></div>
            </div>
        </div>
        <div class="form-group">
            <label for="phoneInput">Phone:</label>
            <input type="tel" class="form-control" id="phoneInput" value="{{ phone }}" placeholder="Phone" disabled/>
        </div>
        <div class="form-group" data-validation="website">
            <label for="websiteInput">Web Site:</label>
            <input type="text" class="form-control" id="websiteInput" value="{{ website }}" placeholder="Site" />
        </div>
        <button type="submit" id="saveBtn" class="btn btn-primary pull-right">Save</button>
    </form>
</div>
